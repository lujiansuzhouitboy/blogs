<%= form_for(@blog) do |f| %>
<% if @blog.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@blog.errors.count, "error") %> prohibited this blog from being saved:</h2>
	<ul>
		<% @blog.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>
<table class="form_table">
	<tr>
		<td><%= f.label :title %></td><td><%= f.text_field :title %></td>
	</tr>
	<tr>
		<td><%= f.label :content %></td><td><%= f.text_area :content %></td>
	</tr>
	<tr>
		<td><%= f.label :category_id %></td><td><%= select("blog", "category_id", Category.where(" parent_id != 0").all.collect  {|category| [ category.name, category.id ] } )%></td>
	</tr>
	
	<tr>
		<td><%= f.submit %></td><td><%= link_to 'Back', root_path(:my_id => current_user.id) %></td>
	</tr>
</table>
<% end %>
