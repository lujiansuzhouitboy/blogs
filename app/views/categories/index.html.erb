<table class="form_table">
	<tr>
		<th>ID</th>
		<th>Name</th>
		<th>Parent_ID</th>
		<th>操作</th>
	</tr>

	<% @categories.each do |category| %>
	<tr>
		<td><%= category.id %></td>
		<td><%= category.name %></td>
		<td><%= category.parent_id %></td>
		<td><%= link_to 'Show', category %>|<%= link_to 'Edit', edit_category_path(category) %>|<%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	</tr>

	<% end %>
	<tr>
		<td><%= link_to 'New Category', new_category_path %></td><td colspan="3"><%= will_paginate @categories %></td>
	</tr>
	
</table>
<%= link_to '用户管理','../admin/index'%>

