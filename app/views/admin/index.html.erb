<h1>用户管理</h1>
<table class="form_table">
	<tr>
		<th>ID</th><th>用户名</th><th>密码</th><th>操作</th>
	</tr>
	<% @users.each do |user| %>
	<% if user.is_admin == 1 %>
	<% else %>
	<% if user.status == 0 %>
	<tr>
		<td><%= user.id %></td><td><%= user.name%></td><td><%= user.password %></td><td><%= link_to "冻结", update_path(:id => user.id) %></td>
	</tr>
	<% else %>
	<tr>
		<td><%= user.id %></td><td><%= user.name%></td><td><%= user.password %></td><td><%= link_to "解冻", update_path(:id => user.id) %></td>
	</tr>
	<% end %>
	<% end %>
	<% end %>
	<tr>
		<td colspan="2"><%= will_paginate @users%></td>
	</tr>
</table>
